    <!--
        Added the entity Participant.
    -->
    <changeSet id="20180904153934-1" author="jhipster">
        <createTable tableName="participant">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>            <column name="user_ext_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_participant_user_ext_id" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
        <createTable tableName="participant_events">
            <column name="events_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="participants_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="participants_id, events_id" tableName="participant_events"/>
        
    </changeSet>
